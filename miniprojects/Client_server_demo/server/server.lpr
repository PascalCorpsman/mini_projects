Program server;

{$R *.res}

Uses sysutils, userver;

Var
  fServer: TServer;
Begin
  // TODO: do not hardcode the listen port !
  fServer := TServer.Create(9876);
  Try
    fServer.execute;
  Except
    On Av: exception Do Begin
      writeln('Fatal: ' + av.Message);
    End;
  End;
  fServer.Free;
End.

